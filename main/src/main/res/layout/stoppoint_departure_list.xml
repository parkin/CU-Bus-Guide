<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/google_now_card"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/display_stoppoint_stoppoint_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:orientation="vertical" >

        <com.teamparkin.mtdapp.views.LocationItemView
            android:id="@+id/display_stoppoint_stoppoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/abc_list_selector_holo_light"
            android:padding="10dp" >
        </com.teamparkin.mtdapp.views.LocationItemView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/display_stoppoint_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="0dp" >
    </LinearLayout>

</LinearLayout>