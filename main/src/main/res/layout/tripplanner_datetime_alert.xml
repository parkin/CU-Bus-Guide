<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/background_holo_light_darker" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Spinner
            android:id="@+id/tp_datetime_alert_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp" />

        <Button
            android:id="@+id/tp_datetime_alert_timepicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:background="@drawable/abc_list_selector_holo_light"
            android:drawableLeft="@drawable/ic_action_clock"
            android:text="2:04 PM" />

        <Button
            android:id="@+id/tp_datetime_alert_datepicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:background="@drawable/abc_list_selector_holo_light"
            android:drawableLeft="@drawable/ic_action_calendar_day"
            android:text="Tue, Jan 6" />

        <Button
            android:id="@+id/tp_datetime_alert_reload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:background="@drawable/abc_list_selector_holo_light"
            android:drawableLeft="@drawable/ic_action_reload"
            android:text="Now" />
    </LinearLayout>

</ScrollView>